{
  "$schema": "https://cdn.coollabs.io/coolify/coolify.schema.json",
  "name": "taufiqnajmi",
  "description": "Photography blog and portfolio application",
  "build": {
    "build_pack": "nixpacks",
    "build_command": "pnpm build",
    "start_command": "pnpm start:prod",
    "install_command": "pnpm install",
    "publish_directory": ".next"
  },
  "network": {
    "ports": {
      "expose": "3000"
    }
  },
  "environment_variables": {
    "production": [
      {
        "key": "NODE_ENV",
        "value": "production"
      },
      {
        "key": "NIXPACKS_PKGS",
        "value": "nodejs_22 postgresql-client"
      }
    ]
  },
  "health_check": {
    "enabled": true,
    "path": "/api/health"
  },
  "settings": {
    "proxy": {
      "force_https": true,
      "gzip": true
    },
    "docker": {
      "network": {
        "connect": true
      }
    }
  },
  "tags": [
    "nextjs",
    "photo-gallery",
    "nodejs"
  ]
}
